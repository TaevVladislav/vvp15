#include <iostream>
using namespace std;
int res = 1; int N;
float Fact2(int n) {
	if (n % 2 == 0) {
		for (int i = 2; i <= n; i += 2) {
			res *= i;
		}
		return res;
	}
	else {
		for (int i = 1; i <= n; i += 2) {
			res *= i;
		}
		return res;
	}
}

int main() {
	cout << "Enter N - ";
	cin >> N;
	cout << "!! = " << Fact2(N) << endl;
}
